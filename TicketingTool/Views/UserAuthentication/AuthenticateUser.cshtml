@model TicketingTool.Models.ViewModel.vm_user_authentication

@{
    ViewBag.Title = "AuthenticateUser";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    .login-logo, .register-logo {
        font-size: 35px;
        text-align: center;
        margin-bottom: 0 !important;
        font-weight: 300;
        padding: 20px;
    }
    .btn-block {
        background-color: #0062cc;
    }
</style>


@using (Html.BeginForm("AuthenticateUser", "UserAuthentication", FormMethod.Post))
{
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><img src="~/Content/dist/img/thai-maritime-logo.png" height="90px;" /></a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Sign in using your MTS credientials</p>
            <div class="form-group has-feedback">
                <label for="exampleInputEmail1">Employee User Name</label>
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your user name" } })
            </div>
            <div class="form-group has-feedback">
                <label for="exampleInputEmail1">Password </label>
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your password",@type="password" } })

            </div>
            <div class="social-auth-links text-center">
                <button type="submit" href="#" class="btn btn-block btn-social btn-facebook btn-flat" style="text-align:center;">
                    <i class="fa fa-angle-double-right"></i> Sign In
                </button>
            </div>
            <a href="@Url.Action("Register","UserAuthentication")" class="text-center">Register a new membership</a>
            @if (@ViewBag.Message != null)
            {
                <div id="MessageDiv" style="text-align:center;color:red;">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
}

@section scripts{
    <script>
        $('body').on('click', 'input', function () {
            $("#MessageDiv").remove();
        });

    </script>
}
